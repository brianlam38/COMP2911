 */


public class GraphMatrix {

	private int numVertices;
	private int graph[][];
	
	// Create graph with n numVertices
	public GraphMatrix(int n) {
		if (n < 0) throw new RuntimeException("Vertices must be non-negative");
		this.graph = new int[n][n];
		this.numVertices = n;
	}
	
