/**
 * A matrix representation of the Freight System Graph.
 * 
 * Contains methods to create a n*n matrix, add and remove edges
 * and check if two vertices are connected.
 *
 */
public class GraphMatrix {

	private int[][] graph;
	
	/**
	 * Constructor for the matrix
	 * @precondition number of vertices n must not be -ve
	 */
	// Create graph with n numVertices and initialise with -ve weights
	public GraphMatrix(int n) {
		this.graph = new int[n][n];
		for (int i = 0; i < n; i++) {
			for (int j = 0; j < n; j++) {
				graph[i][j] = -1;
			}
		}
	}
	
	/**
	 * 
	 * @precondition edge [v][w] doesn't exist
	 */
	// Add path from v->w and w->v
	public void addEdge(int graph[][], int unloadCost, int v, int w) {
		graph[v][w] = unloadCost;
		graph[w][v] = unloadCost;
	}
	
	/**
	 * 
	 * @postcondition edge [v][w] exists
	 */
	// Remove path from v->w and w->
	public void removeEdge(int graph[][], int v, int w) {
		graph[v][w] = -1;
		graph[w][v] = -1;
	}
	
	// Check if one vertex is connected to another
	public boolean isConnected(int graph[][], int v, int w) {
		if (graph[v][w] > -1) {
			return true;
		} else {
			return false;
		}
	}
}
